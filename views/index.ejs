<div class="row">
    <%
    for(i=0; i<dataBike.Models.length;i++){
      %>

        <div class="bikerow col-sm-12 col-md-6 col-lg-4">
          <div class="bikebox text-center">
            <img class="bike" src="images/bike-<%= i+1 %>.jpg">
            <h5>Model <%= dataBike.Models[i] %>
          </h5>
            <p class="price"><%= dataBike.Prices[i] %>â‚¬</p>
            <form action="shop" method='post'>
              <input type="hidden" name="bikeNameFromFront" value="<%= dataBike.Models[i] %>">
              <input type="hidden" name="bikePriceFromFront" value="<%= dataBike.Prices[i]%>">
              <input type="hidden" name="bikeImageFromFront" value="bike-<%= i+1 %>.jpg">
              <input type="hidden" name="bikeQuantityFromFront" value=1>
              <button type="submit" class="btn btn-outline-info">Buy</button>
            </form>
          </div>
        </div>
        <% } %>

    </div>

