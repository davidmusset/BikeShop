  <div class="row">
    <div class="col-12">
      <div id="Basket">
        <h2> Basket </h2>
      </div>
    </div>
  </div>

  <div class="row headers">
      <div class="col-5 col-md-3">
        Picture
      </div>
      <div class="col-4 d-none d-md-block">
        Model
      </div>
      <div class="col-3 col-md-2">
        Quantity
      </div>
      <div class="col-2 col-md-1">
        Price
      </div>
      <div class="col-1 d-none d-md-block">
        Total
      </div>
      <div class="col-2 col-md-1">
        Suppr
      </div>
  </div>

  <%
  var total = 0;
  for(i=0;i<dataCardBike2.length;i++){
    %>
    <div class="row products">
      <div class="col-5 col-md-3">
        <img class="imgproduct" src="images/<%= dataCardBike2[i].Image %>">
      </div>
      <div class="col-4 d-none d-md-block">
        <%= dataCardBike2[i].Model %>
      </div>
      <div class="col-3 col-md-2">

            <form class="row" action="changeQuantity" method="post">
              <div class="col-7">
                <input class="inputqty" name="newQuantity" type=text value="<%= dataCardBike2[i].Quantity %>">
                <input type="hidden" name="Model" value="<%=dataCardBike2[i].Model%>">
              <p id="errorQty"></p>
              </div>
              <div class="iconlink col-5">
                <button type="submit" class="material-icons renewicon">cached</button>
              </div>
          </form>

      </div>
      <div class="col-2 col-md-1">
        <%= dataCardBike2[i].Price %>€
      </div>
      <div class="col-1 d-none d-md-block">
        <% total = total + dataCardBike2[i].Price*dataCardBike2[i].Quantity %>
        <%= dataCardBike2[i].Price*dataCardBike2[i].Quantity %>€
      </div>

        <form action="delete" method='post'>
          <input type="hidden" name="numberToDelete" value="<%=i%>">
          <div class="iconlink col-2 col-md-1">
            <button type="submit" class="trashicon material-icons">delete</button>
          </div>
        </form>

  </div>
  <% } %>


  <div class="row total text-left">
      <div class="col-5 col-md-9">
      </div>
      <div class="col-3 col-md-1">
        Total Basket:
      </div>
      <div class="col-2 col-md-1">
        <%= total %>€
      </div>
      <div class="col-2 col-md-1">
      </div>
  </div>

  <div class="row checkout text-right">
      <div class="col-12">
        <a href="#" class="checkoutBTN btn btn-outline-info">Checkout</a>
      </div>
  </div>

</div>




