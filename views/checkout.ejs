  <div class="row">
      <div class="col-12">
        <div id="menu">
          <span id=link><a href="/"> Shop</a> </span> / Checkout
          </div>
      </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div id="Basket">
        <h3> Thanks for your purchase ! </h3>
      </div>
    </div>
  </div>

  <div class="row headers">
      <div class="col-5 col-md-3">
        Picture
      </div>
      <div class="col-4 d-none d-md-block">
        Model
      </div>
      <div class="col-3 col-md-2">
        Quantity
      </div>
      <div class="col-2 col-md-1">
        Price
      </div>
      <div class="col-2 d-none d-md-block text-center">
        Total
      </div>
  </div>

<div class="allProducts">
  <%
  var total = 0;
  for(i=0;i<dataCardBike.length;i++){
    %>
    <div class="row products lineProduct<%=i%>">
      <div class="col-5 col-md-3">
        <img class="imgproduct" src="images/<%= dataCardBike[i].Image %>">
      </div>
      <div class="col-4 d-none d-md-block">
        <%= dataCardBike[i].Model %>
      </div>
      <div class="col-3 col-md-2">

            <form class="row" action="changeQuantity" method="post">
              <div class="col-7">
                <%= dataCardBike[i].Quantity %>
              </div>
              <div class="iconlink col-5">
              </div>
          </form>

      </div>
      <div class="col-2 col-md-1">
        <%= dataCardBike[i].Price %>€
      </div>
      <div class="col-2 d-none d-md-block text-center" id="total<%=i%>">
        <% total = total + dataCardBike[i].Price*dataCardBike[i].Quantity %>
        <%= dataCardBike[i].Price*dataCardBike[i].Quantity %>€
      </div>

  </div>
  <% } %>
</div>


  <div class="row total text-center">
      <div class="col-5 col-md-9">
      </div>
      <div class="col-3 col-md-1">
        Total Paid:
      </div>
      <div class="col-2 col-md-1 ">
        <p id="total"><%= total %>€</p>
      </div>
      <div class="col-2 col-md-1">
      </div>
  </div>


</div>


  <script src="javascripts/script.js"></script>

